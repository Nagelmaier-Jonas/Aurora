<MudDialog>
    <TitleContent>
        <MudText Typo="Typo.h6">
            Give your convoy a name
        </MudText>
    </TitleContent>
    <DialogContent>
        <MudTextField @bind-Value="@Code" Label="Convoy Name"/>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Success" OnClick="Submit">Submit</MudButton>
    </DialogActions>
</MudDialog>
@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; }
    public string Code { get; set; }
    private void Submit(){
        MudDialog.Close(DialogResult.Ok(Code));
    }
}